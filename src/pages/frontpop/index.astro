---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NavBar from '../../components/NavBar.astro';
import Footer from '../../components/Footer.astro';
---
<BaseLayout>
  <NavBar />
  <main>
    <div class="hero">
      <img src="/images/fOPLogo.svg" alt="FrontPOP!">
      <p>by <a href="https://twitch.tv/the_frontdev" target="_blank" rel="noopener noreferrer">the_frontdev</a></p>
      <hgroup>
        <h1>FrontPOP!</h1>
        <span>Funkos de streamers y creadores de contenido sobre desarrollo de habla hispana</span>
      </hgroup>
    </div>
    <div class="shelf">
      <div class="cases">
        <div class="case">
          <img src="/images/manz.webp" alt="manzdev">
          <div class="name">ManzDev</div>
        </div>
        <div class="case">
          <img src="/images/afordigital.webp" alt="afor_digital">
          <div class="name">Afor Digital</div>
        </div>
        <div class="case">
          <img src="/images/chrisvdev.webp" alt="chrisvdev">
          <div class="name">ChrisVDev</div>
        </div>
        <div class="case">
          <img src="/images/metalitodev.webp" alt="metalitodev">
          <div class="name">MetalitoDev</div>
        </div>
        <div class="case">
          <img src="/images/pythonesa.webp" alt="pythonesa">
          <div class="name">Pythonesa</div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
  .hero {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    & img {
      width: 200px;
    }
    & p {
      margin: -1.5rem 0 0 7rem;
      & a {
        color: var(--ligth);
        text-decoration: none;
        font-weight: 600;
      }
    }
    & hgroup {
      text-align: center;
      & h1 {
        margin-block: 0;
        margin: 1.5rem 0 0.5rem;
      }
    }
  }
  .shelf {
    width: 100%;
    perspective: 150px;
    position: relative;
    box-sizing: border-box;
    border-bottom: solid 23px #181818;
    &::after {
      content: "";
      width: calc(100% - 100px);
      height: 30px;
      background: transparent;
      position: absolute;
      bottom: -32px;
      left: 50px;
      transform: rotateX(-25deg);
      box-shadow: 0 1.5rem 2rem #181818BF;
    }
    .cases {
      width: calc(100% - 100px);
      box-sizing: border-box;
      display: flex;
      justify-content: space-around;
      border-bottom: solid 50px #1e1e1e;
      margin: 0 auto;
      &::before {
        content: '';
        border-style: solid;
        border-width: 0 0 50px 50px;
        border-color: transparent transparent #1e1e1e transparent;
        position: absolute;
        bottom: 0;
        left: 0;
      }
      &::after {
        content: "";
        border-style: solid;
        border-width: 50px 0 0 50px;
        border-color: transparent transparent transparent #1e1e1e;
        position: absolute;
        bottom: 0;
        right: 0;
      }
      .case {
        width: 200px;
        height: 310px;
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: end;
        position: relative;
        top: 40px;
        &:hover {
          & .name {
            animation: appear 1s forwards;
          }
          &::after {
          content: '';
          width: 100%;
          height: 100%;
          background: linear-gradient(to bottom, #607d8b40, transparent);
          position: absolute;
          top: 0;
          left: 0;
          clip-path: polygon(35% 0, 65% 0, 100% 100%, 0 100%);
        }
        }
        & img {
          width: 180px;
        }
        & .name {
          width: 100%;
          height: 3rem;
          background: #181818CC;
          display: flex;
          justify-content: center;
          align-items: center;
          position: absolute;
          bottom: 0;
          left: 0;
          border-radius: 0.25rem;
          box-shadow: 0 0 1rem var(--yellow) inset;
          transform: rotateX(90deg);
        }
      }
    }
  }
  @keyframes appear {
    to {
      transform: rotateX(0deg);
    }
  }
</style>