---
const { project } = Astro.props;
---
<a href={project.url} class="project-card" target="_blank" rel="noopener noreferrer">
  <div class="content">
    <div class="image">
      <img src={`/images/projects/${project.image}`} alt={project.name}>
    </div>
    <div class="info">
      <p><strong>{project.name}</strong></p>
      <p>{project.description}</p>
    </div>
  </div>
  <div class="tecnologies">
    {
      project.technologies.map((technology: string) => (
        <img src={`/images/technologies/${technology.toLowerCase()}.svg`} alt={technology}>
      ))
    }
  </div>
</a>

<style>
  .project-card {
    width: 18.75rem;
    height: 18.75rem;
    display: flex;
    flex-direction: column;
    .content {
      position: relative;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      box-sizing: border-box;
      overflow: hidden;
      .info {
        width: 100%;
        height: 100%;
        padding: 0.5rem;
        box-sizing: border-box;
        background: #36768480;
        backdrop-filter: blur(0.25rem);
        position: absolute;
        top: 0;
        left: 0;
        margin-top: 100%;
        transition: 0.5s;
        & p {
          color: var(--ligth);
          text-decoration: none;
        }
      }
    }
    .tecnologies {
      display: flex;
      justify-content: space-around;
      padding: 0.5rem 0;
      box-sizing: border-box;
      & img {
        width: 2rem;
        object-fit: contain;
      }
    }
    &:hover {
      .content {
        .info {
          margin-top: 0;
        }
      }
    }
  }
  @media screen and (max-width: 768px) {
    .project-card {
      .content {
        .info {
          margin-top: 0;
          backdrop-filter: blur(0.125rem);
        }
      }
    }
  }
</style>